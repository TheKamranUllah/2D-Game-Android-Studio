<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/splash"
    tools:context=".GameOverActivity">


    <ImageView
        android:id="@+id/ending_imageview"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:src="@drawable/splash_icon"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/game_over_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Game Over"
        android:textSize="70dp"
        android:textAlignment="center"
        android:layout_below="@+id/ending_imageview"
        android:textColor="@color/colorAccent"
        android:textStyle="bold"
        android:layout_marginTop="10dp"/>

    <Button
        android:id="@+id/play_again_button"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Play Again"
        android:padding="10dp"
        android:textAllCaps="false"
        android:background="@color/colorAccent"
        android:layout_below="@+id/game_over_text"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:textColor="@android:color/background_light"
        android:textSize="20sp"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/home"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Home Screen"
        android:padding="10dp"
        android:textAllCaps="false"
        android:background="@color/colorAccent"
        android:layout_below="@+id/play_again_button"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:textColor="@android:color/background_light"
        android:textSize="20sp"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/game_over_exit"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Exit Game"
        android:padding="10dp"
        android:textAllCaps="false"
        android:background="@color/colorAccent"
        android:layout_below="@+id/home"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:textColor="@android:color/background_light"
        android:textSize="20sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/game_score_tv_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="You're Score"
        android:textSize="30dp"
        android:textAlignment="center"
        android:layout_below="@+id/game_over_exit"
        android:textColor="@color/colorAccent"
        android:textStyle="bold"
        android:layout_marginTop="50dp"
        />


    <TextView
        android:id="@+id/game_score_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:textAlignment="center"
        android:layout_below="@+id/game_score_tv_text"
        android:textColor="@color/colorAccent"
        android:textStyle="bold"
      />



</RelativeLayout>